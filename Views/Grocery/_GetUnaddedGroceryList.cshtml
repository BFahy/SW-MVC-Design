@model IEnumerable<ShoppingItem>

@if (Model.Count() == 0)
{
    <br/>
    <p style="text-align: center; color: white">No items left in catalogue</p>
}
else
{
    @foreach (var shoppingitem in Model)
    {
        <div class="row m-2" style="background-color: #B8CDF8; padding: 4px 4px 4px 4px;">
            <input type="hidden" value=@shoppingitem.Id/>
            <div class="col-4 border-right d-flex align-items-center">@shoppingitem.ItemName</div>
            <div class="col-2 border-right d-flex align-items-center">@shoppingitem.Unit</div>
            <div class="col-2 border-right d-flex align-items-center">$@shoppingitem.UnitPrice.ToString("0.00")</div>
            <div class="col-2 border-right d-flex align-items-center"><input type="number" placeholder="1" min="1" max="10" id="num-@shoppingitem.Id"/></div>
            <div class="col-2 text-center">
                <button onclick="AddItemToList(this)" id="btn-@shoppingitem.Id" class="btn btn-info">
                    Add
                    </button>
            </div>
        </div>
    }
}

